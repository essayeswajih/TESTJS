<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold text-center mb-6">{{title}}</h1>
  <div class="overflow-x-auto">
    <table class="table-auto w-full border-collapse border border-gray-300">
      <thead>
        <tr class="bg-gray-200">
          <th class="border border-gray-300 px-4 py-2">Cover</th>
          <th class="border border-gray-300 px-4 py-2">Titre</th>
          <th class="border border-gray-300 px-4 py-2">auteur</th>
          <th class="border border-gray-300 px-4 py-2">Categorie</th>
          <th class="border border-gray-300 px-4 py-2">Nombre De Pages</th>
        </tr>
      </thead>
      <tbody>
        {{#each livres}}
        <tr class="hover:bg-gray-100">
          <td class="border border-gray-300 px-4 py-2">
            <img
              src="{{photo}}"
              alt="Photo of {{titre}}"
              class="w-16 h-16 object-cover rounded-lg"
            />
          </td>
          <td class="border border-gray-300 px-4 py-2">{{titre}}</td>
          <td class="border border-gray-300 px-4 py-2">{{auteur}}</td>
          <td class="border border-gray-300 px-4 py-2">{{categorie}}</td>
          <td class="border border-gray-300 px-4 py-2">{{pages}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
